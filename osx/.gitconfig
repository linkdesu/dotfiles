[user]
	name = Link
	email = xieaolin@foxmail.com
[core]
    symlinks = false
    autocrlf = input
	excludesfile = /Users/xieaolin/.gitignore_global
    paper = less -r
    quotepath = false
[push]
    default = simple
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
[branch]
      autosetuprebase = always
[alias]
    output = "!sh -c 'git archive -o ~/var/output.zip $1 $(git diff --name-only $2)' -"
    aa = add .
    ss = status
    cc = commit
    bb = branch
    lm = log --graph --pretty=format:'%h @%ci by %ce: %s %n' --after='1 month'
    ls = log --graph --pretty=format:'%h @%ci by %ce: %s %n'
[diff]
    tool = meld
[merge]
    tool = meld
[mergetool]
	keepBackup = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/xieaolin/.stCommitMsg
[http]
	# proxy = http://127.0.0.1:8888
[https]
	# proxy = https://127.0.0.1:8888
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
